Import('master_env')

env = master_env.Clone()

env.PiExternalRelease('2.1.0-experimental', '2.1-experimental', organisation='Eigenlabs Examples')

plg_files = Split("""
    vu_meter.cpp
""")

env.PiPythonPackage(package='vu_meter', per_agent='plg_vu_meter')
env.PiAgent('vu_meter', 'plg_vu_meter', 'vu_meter_plg',cversion='1.0.0')

env.PiPipBinding('vu_meter_native', 'vu_meter.pip',
	sources=plg_files, libraries=Split('pic piw pia'), package='vu_meter',
	per_agent="plg_vu_meter")

env.PiPackageDescription('vu_meter', desc='Vu Meter', groups=('contrib',))
env.PiPackageCollection('vu_meter', groups=('contrib',))
